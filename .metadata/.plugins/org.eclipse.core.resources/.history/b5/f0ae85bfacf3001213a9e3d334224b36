package br.usp.ime.tcc.utils;

import static org.junit.Assert.assertEquals;
import static org.mockito.Matchers.any;
import static org.mockito.Mockito.mock;

import org.junit.Before;
import org.junit.Test;

import android.content.Context;
import android.net.Uri;

public class UtilsTest {
	private Context mockContext;
	private Uri mockUri;
	
	@Before
	public void setUp() throws Exception {
		mockContext = mock(Context.class);
		mockUri = mock(Uri.class);
		
		when(mockContext.getContentResolver().query(mockUri, any(String[].class), null, null, null));
	}
	
	@Test
	public void selectedPicturePathShouldBeNullIfInvalidUri() {
		assertEquals(null, Utils.getSelectedPicturePath(null, mockContext));
	}
	
	@Test
	public void shouldReturnTheCorrectPath() {
		
		assertEquals(null, Utils.getSelectedPicturePath(mockedUri, mockContext));
	}
}
